{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "addLabels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true,
      "automergeStrategy": "squash",
      "automergeSchedule": [
        "every weekend"
      ]
    }
  ]
}